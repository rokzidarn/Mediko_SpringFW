<html xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org"
      xmlns:sec="http://www.thymeleaf.org/thymeleaf-extras-springsecurity3">
    #parse("../common/head.vm")
    <body>
    	<div class="container">
            <div class="row">
                <div class="panel panel-default main-panel">
                    <div class="main-container">
                        <div class="content-container">
                            <div class="content-topbar">
                                <div id="showSidebarButton" class="show-sidebar-button hidden-lg hidden-md"></div>
                                <div class="content-title">$title</div>
                            </div>
                            <div class="content">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Osebni Podatki</div>
                                            <div class="panel-body">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <strong>Ime</strong><br>
                                                        $selectedPatient.first_name
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong>Priimek</strong><br>
                                                        $selectedPatient.last_name
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong>Datum rojstva</strong><br>
                                                        $selectedPatient.birth_date
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong>Spol</strong><br>
                                                        #if($selectedPatient.getSex() == 'f')
                                                        	Ženski
                                                        #else
                                                        	Moški
                                                        #end
                                                    </div>                                                                                                   
                                                    <div class="col-md-6">
                                                        <strong>Naslov in kraj</strong><br>
                                                        $selectedPatient.address<br>$p.po_box.city
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong>Kartica ZZZS</strong><br>
                                                        $selectedPatient.id
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Zdravniki</div>
                                            <div class="panel-body">
                                               <div class="row">
                                               	#if(!$doctor)
                                               		<div class="col-md-6">
                                                        <strong>Nimate še izbranega zdravnika!</strong><br>
                                                    </div>
                                                #else
                                                    <div class="col-md-6">
                                                        <strong>Ime</strong><br>
                                                        $doctor.first_name
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong>Priimek</strong><br>
                                                        $doctor.last_name
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong>Tip</strong><br>
                                                        $doctor.type
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong>Zdravstvena ustanova</strong><br>
                                                        $doctor.medical_center.name
                                                    </div>
                                                    <div class="col-md-6">
                                                    	#if(!$doctor.nurses)
                                                        <strong>Medicinska sestra</strong><br>  
                                                        /
                                                        #else
	                                                        #foreach($nurse in $doctor.nurses)
	                                                        	$nurse.first_name $nurse.last_name
	                                                    	#end
                                                    	#end
                                                    </div>   
                                            	#end                                                
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Zadnji pregledi</div>
                                            <div class="panel-body">
												#if($checkups.isEmpty())
													<div class="col-md-6">
														<strong>Nimate pregledov!</strong><br>
													</div>
												#else
                                                <div class="table-responsive">            	
	                                                    <table class="table table-hover">
	                                                        <thead>
	                                                            <tr> 
	                                                                <th>Datum</th> 
	                                                                <th>Zdravnik</th>
	                                                                <th>Razlog</th>
	                                                            </tr>
	                                                        </thead>
	                                                        #foreach($checkup in $checkups)
	                                                        <tbody> 
	                                                            <tr> 
	                                                                <th scope="row">$checkup.appointment.date</th>
	                                                                <td>dr. $checkup.doctor.last_name</td> 
	                                                                <td>$checkup.reason</td>
	                                                            </tr> 
	                                                        </tbody> 
	                                                        #end
	                                                    </table>                                                   
                                                    </div>
                                                    <button type="button" class="btn btn-info">Pokaži več</button>
											     #end                                            
                                            </div>
                                        </div>
                                    </div>								
                                    <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Bolezni</div>
                                            <div class="panel-body">
                                            #if($diseases.isEmpty())
                                            	<div class="col-md-6">
													<strong>Nimate bolezni!</strong><br>
												</div>
											#else
												<div class="table-responsive">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr> 
                                                                <th>Bolezen</th>
                                                                <th>Dodatno</th>
                                                            </tr>
                                                        </thead> 
                                        	           #foreach($disease in $diseases)																	
                                                        <tbody> 
                                                            <tr> 
                                                            	#if($disease.getIsAllergy()==0)
	                                                                <td>$disease.name</td> 
	                                                                <td>-</td> 
                                                                #end
                                                            </tr> 
                                                        </tbody> 		                                               
                                                        #end 
                                                    </table>
                                                </div>  
                                                <button type="button" class="btn btn-info">Pokaži več</button>                                                
                                	       #end                                      												
											</div>
										</div>
									</div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Alergije</div>
                                            <div class="panel-body">
                                            #if($diseases.isEmpty())
                                            	<div class="col-md-6">
													<strong>Nimate alergij!</strong><br>
												</div>
											#else
												<div class="table-responsive">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr> 
                                                                <th>Alergija</th>
                                                                <th>Dodatno</th>
                                                            </tr>
                                                        </thead> 
                                        	           #foreach($allergy in $diseases)													
                                                        <tbody> 
                                                            <tr> 
                                                            	#if($allergy.getIsAllergy() == 1)
	                                                                <td>$allergy.name</td> 
	                                                                <td>-</td> 
                                                                #end
                                                            </tr> 
                                                        </tbody> 		                                               
														#end
                                                    </table>
                                                </div> 
                                                <button type="button" class="btn btn-info">Pokaži več</button>                                                 
                                        	#end                                      												
											</div>
										</div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Diete</div>
                                            <div class="panel-body">
                                            #if($diets.isEmpty())
                                            	<div class="col-md-6">
													<strong>Nimate diet!</strong><br>
												</div>
											#else
    											<div class="table-responsive">
    	                                            <table class="table table-hover">
    	                                                <thead>
    	                                                    <tr> 
    	                                                        <th>Dieta</th>
    	                                                        <th>Navodila</th>
    	                                                    </tr>
    	                                                </thead>
                                                	   #foreach($diet in $diets)													 
                                                        <tbody> 
                                                            <tr> 
                                                                <th scope="row">$diet.getName()</th> 
                                                                <td>-</td> 
                                                            </tr> 
                                                        </tbody>                              
    													#end
                                                    </table>                                                  
                                                </div>
                                    			<button type="button" class="btn btn-info">Pokaži več</button>
                                        	#end 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Zdravila</div>
                                            <div class="panel-body">
                                            #if($medicines.isEmpty())
                                            	<div class="col-md-6">
													<strong>Nimate zdravil!</strong><br>
												</div>
											#else														
												<div class="table-responsive">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr> 
                                                                <th>Zdravilo</th>
                                                                <th>Tip</th>
                                                                <th>Navodila</th>
                                                            </tr>
                                                        </thead> 
                                                        #foreach($medicine in $medicines)  
                                                        <tbody> 
                                                            <tr> 
                                                                <th scope="row">$medicine.getName()</th> 
                                                                <td>$medicine.type</td>
                                                                <td>-</td> 
                                                            </tr> 
                                                        </tbody> 
                                                        #end
                                                    </table>                                                  
                                                </div>
                                                <button type="button" class="btn btn-info">Pokaži več</button>
											#end
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Meritve</div>
                                            <div class="panel-body">
                                            #if($results.isEmpty())
                                            	<div class="col-md-6">
													<strong>Nimate meritev!</strong><br>
												</div>
											#else                                           	
												<div class="table-responsive">
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr> 
                                                                <th>Tip</th>
                                                                <th>Datum</th>
                                                                <th>Lokacija</th>
                                                            </tr>
                                                        </thead>
                                                        #foreach($result in $results) 
                                                        <tbody> 
                                                            <tr onclick="$('#meritev-0').toggle(500)"> 
                                                                <th scope="row">$result.type</th> 
                                                                <td>$result.date</td> 
                                                                <td>-</td>                                                                
                                                            </tr>
                                                            <tr class="info" id="meritev-0" style="display: none">
                                                                <td colspan="3">
                                                                    <div>
                                                                        -
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        </tbody> 
                                                        #end
                                                    </table>                                               
                                                </div> 
                                                <button type="button" class="btn btn-info">Pokaži več</button>                                              
                                        	#end 
                                            </div>
                                        </div>
                                    </div>                                   
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Prihajajoči pregledi</div>
                                            <div class="panel-body">
												#if($appointments.isEmpty())
													<div class="col-md-6">
														<strong>Nimate prihajajočih pregledov!</strong><br>
													</div>
												#else
                                                <div class="table-responsive">                                               	
	                                                    <table class="table table-hover">                                                   	
	                                                        <thead>
	                                                            <tr> 
	                                                               <th>Datum</th> 
                                                                   <th>Zdravnik</th>
	                                                            </tr>
	                                                        </thead>
	                                                        #foreach($appointment in $appointments)                                                        
	                                                        <tbody> 
	                                                            <tr> 
	                                                                <th scope="row">$appointment.date</th> 
	                                                                <td>dr. $appointment.doctor.last_name</td> 
	                                                            </tr> 
	                                                        </tbody> 
	                                                        #end
	                                                    </table>                                                   
                                                </div>                                               
												#end  
												<button type="button" class="btn btn-info">Naroči</button>                                          
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="sidebar" class="sidebar hidden-sm hidden-xs">
                            <div id="sidebarContent">
                                <div class="sidebar-topbar">
                                    <div class="logo" style="color:#eee">
                                        #if($user.lastLogin)
                                            <div style="padding-left: 10px;">
                                                <h6>Zadnja prijava</h6>
                                                <h6>$user.lastLogin</h6>
                                            </div>
                                        #end
                                    </div>
                                    <div id="hideSidebarButton" class="hide-sidebar-button hidden-lg hidden-md">
                                    </div>
                                </div>
                                <div class="patient">
                                    <div class="patient-image patient-male">

                                    </div>
                                    <div class="patient-name">
                                        $user.username
                                    </div>
                                </div>
                                <div class="sidebar-seperator"></div>
                                #patientPicker($user)
                                <div class="sidebar-seperator"></div>
                                #sidemenu($usertype $page $subpage)
                                <div class="sidebar-seperator"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>